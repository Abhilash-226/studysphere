PORT=5000
MONGODB_URI=mongodb://localhost:27017/studysphere
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=7d
EMAIL_FROM=studyspherecompany@gmail.com
NODE_ENV=development

# Encryption Key for Chat Messages (32 bytes / 64 hex chars)
# Generate one using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
MESSAGE_ENCRYPTION_KEY=

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# Gmail SMTP Configuration (replace with your actual app password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=studyspherecompany@gmail.com
SMTP_PASS=your_app_password_here

# For cloud storage (if needed)
# CLOUD_NAME=
# CLOUD_API_KEY=
# CLOUD_API_SECRET=

# JaaS (Jitsi as a Service) Configuration
# Get these from https://jaas.8x8.vc/ -> API Keys section
JAAS_APP_ID=vpaas-magic-cookie-xxxxxxxx
JAAS_KEY_ID=vpaas-magic-cookie-xxxxxxxx/your-key-id
JAAS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
